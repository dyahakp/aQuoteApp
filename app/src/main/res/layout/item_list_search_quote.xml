<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_item"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="3dp">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_9sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:elevation="4dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="if you'll never try you'll never know"
                    android:textAlignment="center"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Dyah anggraini"
                    android:textColor="#ff785b"
                    android:textSize="@dimen/_13ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/container"

                >

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:src="@drawable/love" />

                <ImageButton
                    android:id="@+id/btnCopy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/btnLike"
                    android:background="#ffffff"
                    android:src="@drawable/copy" />

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/btnCopy"
                    android:background="#ffffff"
                    android:src="@drawable/share" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>